# Runtime
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Sessions storage (bind-mounted in compose)
WA_SESSION_DIR=/data/wa-sessions

# MongoDB
MONGO_URI=
MONGO_DATABASE=whatsapp-communication-service

# Auth/JWT
JWT_SECRET=
JWT_EXPIRES_IN=3600s
JWT_ADMIN_USERNAME=
JWT_ADMIN_PASS=
JWT_SERVICE_URL=
JWT_LOGIN_PATH=/v1/auth/login

# OpenAI (optional)
OPENAI_MODEL=gpt-4o-mini
OPENAI_API_KEY=

# App service URLs (adjust to internal DNS if applicable)
APP_IA_ADMIN_CONFIGURATION_SERVICE_URL=
APP_IA_CUSTOMER_CONFIGURATION_SERVICE_URL=

# Compose/ECR
ECR_REGISTRY=xxxxxxxxxxxx.dkr.ecr.us-east-1.amazonaws.com
